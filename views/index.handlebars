{{!-- display the new burger --}}
<div class="container ">
  <div class="row">
    <div class="col-md-4 col-lg-4"></div>
    <div class="col-md-4 col-lg-4">
      <h1>Eat-Da-Burger!</h1>
    </div>
    <div class="col-md-4 col-lg-4"></div>
  </div>
  <div class="row"> 
    <div class="col-md-4 col-lg-4"></div>  
    <div class="col-md-4 col-lg-4"><img src="assets/img1.png"></div>
    <div class="col-md-4 col-lg-4"></div>
  </div>
  <div class="row"> 
    <div class="col-md-4 col-lg-4">
      <ul> 
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>  
    <div class="col-md-4 col-lg-4">
      <form class="create-form">
        <div class="form-group">
          <label for="bu"></label>
          <input type="text" id="bu" name="name">
        </div>
        <div class="form-group">
          <label for="sleepy">Enter the burger you want to eat and click "Submit" button</label><br>
        </div>
        <button id="submit" type="submit">Submit</button>
      </form>
    </div>
    <div class="col-md-4 col-lg-4">
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-devoured devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>


